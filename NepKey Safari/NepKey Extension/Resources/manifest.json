{
  "manifest_version": 3,
  "name": "NepKey",
  "version": "2.0",
  "description": "ELTE Felhasználóbarát Open-Source Segéd",
  "default_locale": "en",
  "icons": {
    "16": "images/icon16.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "NepKey"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://neptun.elte.hu/*",
    "https://canvas.elte.hu/*",
    "https://tms.inf.elte.hu/*",
    "https://idp.elte.hu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://neptun.elte.hu/*",
        "https://canvas.elte.hu/belepes/*",
        "https://idp.elte.hu/auth/*",
        "https://tms.inf.elte.hu/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/base.css",
        "styles/dark-mode.css",
        "styles/footer.css",
        "styles/language-selector.css",
        "styles/menu-buttons.css",
        "styles/modal.css",
        "styles/otp-secret.css",
        "styles/settings.css",
        "styles/toggles.css",
        "styles/tutorial.css",
        "content.js",
        "background.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'"
  }
}
